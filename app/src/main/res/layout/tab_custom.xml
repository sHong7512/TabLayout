<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/customImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/customTextView"
        app:layout_constraintStart_toStartOf="@id/customTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/selector_custom_tab_tint" />

    <TextView
        android:id="@+id/customTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/customCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="-5dp"
        android:layout_marginBottom="-5dp"
        android:background="@drawable/point_background"
        android:gravity="center"
        android:padding="3dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="7dp"
        app:layout_constraintBottom_toTopOf="@id/customTextView"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_min="15dp"
        app:layout_constraintStart_toEndOf="@id/customTextView"
        app:layout_constraintWidth_min="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>